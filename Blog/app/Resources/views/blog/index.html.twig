{% extends 'base.html.twig' %}

{% block main %}
    {% for article in articles %}
        <div class="col-md-4">
            <article>
                <header>
                    <h2>{{ article.title }}</h2>
                </header>

                <p>
                    {{ article.summary }}
                </p>

                <small class="author">
                    {{ article.author }}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-sm"
                           href="{{ path('article_view', {'id': article.id}) }}">Read more &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    {% endfor %}
{% endblock %}
