<h2>All Categories
    <span style="float: right">
    <a href="/admin/category/create" class="btn btn-warning">Create New</a>
    </span>
</h2>
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each categories}}
        <tr>
            <td>{{ this.id }}</td>
            <td>{{ this.name }}</td>
            <td>
                <a href="/admin/category/edit/{{this.id}}" class="btn btn-sm btn-success">Edit</a>
                <a href="/admin/category/delete/{{this.id}}" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>