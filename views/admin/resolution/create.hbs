<form class="form-horizontal" action="/admin/resolution/create"
      method="POST">
    <fieldset>
        <legend>New Resolution</legend>
        {{#if error}}
            <div style="text-align: center">
                <div class="alert alert-dismissible alert-danger fade in" style="display: inline-block">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <span class="glyphicon glyphicon-remove-sign" style="margin-right: 4px"></span>
                    {{error}}
                </div>
            </div>
        {{/if}}
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="width">Width</label>
            <div class="col-sm-4">
                <input type="number" class="form-control"
                       id="width" placeholder="Width" name="width">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="height">Height</label>
            <div class="col-sm-4">
                <input type="number" class="form-control"
                       id="height" placeholder="Height" name="height">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a class="btn btn-default"
                   href="/admin/resolution/all">Cancel</a>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </fieldset>
</form>