<form class="form-horizontal" action="/admin/resolution/delete/{{resolution.id}}" method="POST">
    <fieldset>
        <legend>Delete Resolution</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="width">Width</label>
            <div class="col-sm-4">
                <input type="number" class="form-control"
                       value="{{resolution.width}}" disabled id="width" placeholder="Width" name="width">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="height">Height</label>
            <div class="col-sm-4">
                <input type="number" class="form-control"
                       value="{{resolution.height}}" disabled id="height" placeholder="Height" name="height">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a class="btn btn-default"
                   href="/admin/resolution/all">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </fieldset>
</form>