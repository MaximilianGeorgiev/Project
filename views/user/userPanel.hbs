<div style="padding: 10px">
    <div class="col-md-4" style="padding: 15px; text-align: center">
        <img src="/uploads/{{userProfile.avatar}}" class="img-circle" alt="Profile picture" width="180"
             height="180">
        <h2>{{userProfile.nickname}}</h2>
    </div>
    <div class="col-md-8" style="padding: 15px; padding-bottom: 0px">
        <div align="left" class="panel panel-primary" style="margin-bottom: 15px">
            <div class="panel-heading">
                <h3 class="panel-title">User Details</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <tbody>
                    <tr>
                        <td>Name</td>
                        <td>{{userProfile.fullName}}</td>
                    </tr>
                    <tr>
                        <td>Location</td>
                        <td>{{userProfile.location}}</td>
                    </tr>
                    <tr>
                        <td>Uploads</td>
                        <td>{{userProfile.articles.length}}</td>
                    </tr>
                    {{#if ownsProfile}}
                        <tr>
                            <td>Birthdate</td>
                            <td>{{userProfile.birthdate}}</td>
                        </tr>
                        <tr>
                            <td>E-Mail</td>
                            <td>{{userProfile.email}}</td>
                        </tr>
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="padding:15px">
        <div align="left" class="panel panel-primary" style="margin-bottom: 0px">
            <div class="panel-heading">
                <h3 class="panel-title">About me</h3>
            </div>
            <div class="panel-body">
                {{userProfile.aboutme}}
            </div>
        </div>
    </div>
    <div class="col-md-3" style="padding-top: 15px">
        <div>
            <h2 align="center">Uploads</h2>
            <p align="center">See all uploaded wallpapers</p>
            <p align="center"><a class="btn btn-success btn-md" href="/user/uploads/{{userProfile.nickname}}">Uploads</a></p>
        </div>
    </div>
    {{#if ownsProfile}}
        <div class="col-md-3" style="padding-top: 15px">
            <div>
                <h2 align="center">Upvoted</h2>
                <p align="center">See all upvoted wallpapers</p>
                <p align="center"><a class="btn btn-primary btn-md" href="/user/upvoted/{{userProfile.nickname}}">Upvoted</a></p>
            </div>
        </div>
        <div class="col-md-3" style="padding-top: 15px">
            <div>
                <h2 align="center">Saved</h2>
                <p align="center">See all saved wallpapers</p>
                <p align="center"><a class="btn btn-warning btn-md" href="/user/saved/{{userProfile.nickname}}">Saved</a></p>
            </div>
        </div>
        <div class="col-md-3" style="padding-top: 15px">
            <div>
                <h2 align="center">Edit Profile</h2>
                <p align="center">Edit your profile</p>
                <p align="center"><a class="btn btn-danger btn-md" href="/user/edit/{{userProfile.nickname}}">Edit Profile</a></p>
            </div>
        </div>
    {{/if}}
</div>