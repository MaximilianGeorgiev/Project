<div style="padding: 10px">
    <div class="col-md-4" style="padding: 15px; text-align: center">
        <img src="/avatars/{{user.avatar}}" class="img-circle" alt="Profile picture" width="177"
             height="177">
        <h2>{{user.nickname}}</h2>
    </div>
    <div class="col-md-8" style="padding: 15px; padding-bottom: 0px">
        <div align="left" class="panel panel-primary" style="margin-bottom: 15px">
            <div class="panel-heading">
                <h3 class="panel-title">User Details</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <tbody>
                    <tr>
                        <td>Name</td>
                        <td>{{user.fullName}}</td>
                    </tr>
                    <tr>
                        <td>Birthdate</td>
                        <td>{{user.birthdate}}</td>
                    </tr>
                    <tr>
                        <td>Location</td>
                        <td>{{user.location}}</td>
                    </tr>
                    <tr>
                        <td>Uploads</td>
                        <td>{{user.articles.length}}</td>
                    </tr>
                    <tr>
                        <td>E-Mail</td>
                        <td>{{user.email}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="padding:15px">
        <div align="left" class="panel panel-primary" style="margin-bottom: 0px">
            <div class="panel-heading">
                <h3 class="panel-title">About me</h3>
            </div>
            <div class="panel-body">
            </div>
        </div>
    </div>
    <div class="col-md-3" style="padding-top: 15px">
        <div style="border-radius:20px; border: 3px solid slategrey">
            <h2 align="center">Edit Profile</h2>
            <p align="center">Edit your profile</p>
            <p align="center"><a class="btn btn-danger btn-md">Edit Profile</a></p>
        </div>
    </div>
    <div class="col-md-3" style="padding-top: 15px">
        <div style="border-radius:20px; border: 3px solid slategrey">
            <h2 align="center">Uploads</h2>
            <p align="center"> See all uploaded wallpapers </p>
            <p align="center"><a class="btn btn-success btn-md">Uploads</a></p>
        </div>
    </div>
    <div class="col-md-3" style="padding-top: 15px">
        <div style="border-radius:20px; border: 3px solid slategrey">
            <h2 align="center">Saved</h2>
            <p align="center"> See all saved wallpapers </p>
            <p align="center"><a class="btn btn-warning btn-md">Saved</a></p>
        </div>
    </div>
</div>
