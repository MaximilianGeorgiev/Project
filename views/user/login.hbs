<form class="form-horizontal" method="post" action="/user/login">
    <fieldset>
        <legend>Login</legend>
        {{#if error}}
        <div style="text-align: center">
            <div class="alert alert-dismissible alert-danger fade in" style="display: inline-block">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <span class="glyphicon glyphicon-remove-sign" style="margin-right: 4px"></span>
                {{error}}
            </div>
        </div>
        {{/if}}
        <div class="form-group">
            <label class="col-sm-4 control-label">Email</label>
            <div class="col-sm-4 ">
                <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Password</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a class="btn btn-default" href="/">Cancel</a>
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </div>
    </fieldset>
</form>