<form class="form-horizontal" method="POST" action="/article/report/{{article.id}}">
    <fieldset>
        <legend>Report Wallpaper</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="articleReason">Reason</label>
            <div class="col-sm-4">
                <textarea class="form-control" id="articleReason" rows="5"
                name="reason" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
        <a class="btn btn-default" onClick="history.go(-1); return true">Cancel</a>
        <button type="submit" class="btn
btn-success">Report
        </button>
            </div>
        </div>
    </fieldset>
</form>