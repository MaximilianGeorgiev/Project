<form class="form-horizontal" method="POST" action="/article/edit/{{id}}">
    <fieldset>
        <legend>Edit Wallpaper</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">Category</label>
            <div class="col-sm-4">
                <select class="form-control" id="select" name="category">
                    {{#each categories}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="tags">Tags</label>
            <div class="col-sm-4 ">
                <input type="text" class="form-control" id="tags" name="tags"
                       value="{{tagNames}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a href="/article/details/{{id}}" class="btn btn-default">Cancel</a>
                <button type="submit" href="/article/edit/{{id}}" class="btn
btn-success">Edit
                </button>
            </div>
        </div>
    </fieldset>
</form>