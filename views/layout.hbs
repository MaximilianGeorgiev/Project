<!DOCTYPE html>
<html>
<head>
    <title>UberPapers</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="/javascripts/jquery-1.10.2.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/search.js"></script>
</head>
<body>
<header style="padding-bottom: 10px">
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">UberPapers</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="navbar-form" role="search">
                    <input id="searchBar" value="" type="text" class="form-control" placeholder="Search" name="tags">
                    <a id="button" href="" type="submit" class="btn btn-default">Search</a>
                </div>
            </li>
            {{#if isAdmin}}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                       role="button" aria-expanded="false">Admin<span
                            class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/admin/user/all">Users</a></li>
                        <li><a href="/admin/category/all">Categories</a></li>
                    </ul>
                </li>
            {{/if}}
            {{#if user}}
                <li><a href="/user/details">Welcome, {{firstName}}</a></li>
                <li><a href="/article/create">Upload</a></li>
                <li><a href="/user/logout">Logout</a></li>
            </ul>
            </div>
            {{/if}}
            {{#unless user}}
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/user/register">Register</a></li>
                    <li><a href="/user/login">Login</a></li>
                </ul>
            {{/unless}}
        </div>
    </div>
</header>
{{#if error }}
    <div style="text-align: center">
        <h3>{{error}}</h3>
    </div>
{{/if}}
<div style="padding-top: 30px">
    <div class="col-md-2" style="text-align: center">
        <div class="list-group">
            {{#each categories}}
                {{#if this.isChecked}}
                    <a class="list-group-item" href="/category/{{this.id}}"
                       style="color:#F2F2F2; background: slategrey">{{this.name}}</a>
                {{/if}}
                {{#unless this.isChecked}}
                    <a class="list-group-item" href="/category/{{this.id}}">{{this.name}}</a>
                {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="well col-md-8">
        {{{body}}}
    </div>
    <div class="col-md-2" style="text-align: center">
        <div class="list-group">
            <a class="list-group-item" href="#">1024x768</a>
            <a class="list-group-item" href="#">1024x768</a>
            <a class="list-group-item" href="#">1024x768</a>
            <a class="list-group-item" href="#">1024x768</a>
            <a class="list-group-item" href="#">1024x768</a>
            <a class="list-group-item" href="#">1024x768</a>
        </div>
    </div>
</div>
{{#if pagesExist}}
    <div class="col-md-12" style="text-align: center">
        <div>
            <ul class="pagination">
                {{#each pages}}
                    {{#if ../appendWithAnd}}
                        <li>
                            {{#if this.isSelected}}
                                <a href="{{../currentUrl}}&page={{this.index}}" class="btn active">{{this.text}}</a>
                            {{/if}}
                            {{#unless this.isSelected}}
                                <a href="{{../currentUrl}}&page={{this.index}}">{{this.text}}</a>
                            {{/unless}}
                        </li>
                    {{/if}}
                    {{#unless ../appendWithAnd}}
                        <li>
                            {{#if this.isSelected}}
                                <a href="{{../currentUrl}}?page={{this.index}}" class="btn active">{{this.text}}</a>
                            {{/if}}
                            {{#unless this.isSelected}}
                                <a href="{{../currentUrl}}?page={{this.index}}">{{this.text}}</a>
                            {{/unless}}
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
{{/if}}
</body>
<footer style="padding-top: 30px">
    <div class="container-fluid navbar-default navbar-fixed-bottom push">
        <p class="navbar-right">&copy; 2016 - Uberpapers, Bulgaria</p>
    </div>
</footer>
</html>
